# Docker Environment Variables for TradingWeb
# Copy this file to .env and customize the values

# JWT Secret (REQUIRED - Change this to a secure random string!)
# Generate one at: https://generate-secret.vercel.app/32
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-long-change-this-in-production

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Monitoring
MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL=60000

# Job Schedules (Bangkok UTC+7)
# 6 AM Bangkok = 23:00 UTC (previous day)
# 6:30 AM Bangkok = 23:30 UTC (previous day)
# 7 AM Bangkok = 00:00 UTC (current day)
DATA_FEED_SCHEDULE="0 23 * * *"
SCREENING_SCHEDULE="30 23 * * *"
ML_SIGNALS_SCHEDULE="0 0 * * *"
